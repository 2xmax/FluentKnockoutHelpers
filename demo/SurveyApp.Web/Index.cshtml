@using System.Web.Optimization
@using FluentKnockoutHelpers.Core.TypeMetadata
@using SurveyApp.Model.DomainModels
@using SurveyApp.Web
@using FluentKnockoutHelpers.Core
@using SurveyApp.Web.App_Start

<!DOCTYPE html>
<html>
    <head>
        <title>Loading Survey App...</title>
        
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
        <meta name="format-detection" content="telephone=no"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        @Styles.Render(BundleConfig.Css.All)
        
    </head>
    <body>
        <div id="applicationHost">
            <div class="splash">
                <div class="message">
                    Loading Survey App...
                </div>
                <i class="icon-spinner icon-2x icon-spin active"></i>
            </div>
        </div>

        @Scripts.Render(BundleConfig.Scripts.All)
        
        @if(HttpContext.Current.IsDebuggingEnabled) {
            <script type="text/javascript" src="~/App/durandal/amd/require.js" data-main="@VirtualPathUtility.ToAbsolute("~/App/main")"></script>
        } else {
            <script type="text/javascript" src="~/App/main-built.js"></script>
        }
        
        <script>
            define("typeMetadata", function() {
                return @(TypeMetadataHelper.EmitTypeMetadataArray());
            });
        </script>
    </body>
</html>